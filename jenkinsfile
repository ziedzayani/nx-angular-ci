pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18' 
            args '-p 3000:3000' 
        }
    }
    tools { node "nodejs" }
    stages {
        stage('Pipeline') {
            parallel {
                stage('Main') {
                    when {
                        not { branch 'main' }
                    }
                    agent any
                    steps {
                        echo 'hello world'
                        sh "npm ci"
                        sh "npx nx format:check"
                        sh "npx nx affected --base=HEAD~1 -t lint --parallel=3"
                        sh "npx nx affected --base=HEAD~1 -t test --parallel=3"
                        sh "npx nx affected --base=HEAD~1 -t build --parallel=3"
                    }
                }
              
            }
        }
    }
}
